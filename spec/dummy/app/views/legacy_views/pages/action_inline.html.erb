<h1>Inline Action Component</h1>
<%=
  matestack_component(
    :action,
    method: :post,
    path: legacy_views_success_path,
    data: {
      time: I18n.l(DateTime.now)
    },
    success: {
      emit: 'action_successful'
    }
  ) do
    button text: 'Click me!'
  end
%>
<%=
  matestack_component(:async, show_on: 'action_successful', id: 'async-action-success') do
    plain "Action was successful {{ event.data.time }}"
  end
%>